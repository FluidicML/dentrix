<Wix
	xmlns="http://wixtoolset.org/schemas/v4/wxs"
	xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
	<Package
	    Name="Gain"
	    Manufacturer="Fluidic ML, INC."
	    Version="1.0.0.0"
	    UpgradeCode="f68cb4b7-7e79-4d25-984f-08a980e2af4f">
	  
	    <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeError)" />

		<MediaTemplate EmbedCab="yes" />

		<ui:WixUI
			Id="DialogSet"
			InstallDirectory="INSTALLFOLDER" />

		<Feature Id="ApplicationFeature" Title="Application">
			<Files Include="$(var.Application.TargetDir)\**" />
		</Feature>

		<Feature Id="BackgroundServiceFeature" Title="Background Service">
			<ComponentGroupRef Id="BackgroundServiceComponents" />
		</Feature>
    </Package>

	<Fragment>
		<StandardDirectory Id="ProgramFiles6432Folder">
			<Directory Id="INSTALLFOLDER" Name="!(bind.Property.ProductName)" />
		</StandardDirectory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="BackgroundServiceComponents" Directory="INSTALLFOLDER">
			<Component>
				<File Source="BackgroundService.exe" />
			</Component>
		</ComponentGroup>
	</Fragment>
</Wix>
